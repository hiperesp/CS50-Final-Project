{% extends "layout/layout.twig" %}

{% block content %}
    <main class="py-3">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 offset-lg-3 col-lg-6">
                    <div class="col-lg-12">
                        <h1 class="fs-1">og:preview</h1>
                        <p class="fs-5 text-muted">Preview how your page will look on Facebook, Twitter, LinkedIn and more!</p>
                    </div>
                    <hr>
                    <div>
                        <form action="preview">
                            <div>
                                <h5 class="fs-5 mt-4 mb-3">Let's get started!</h5>
                                <div class="mb-3">
                                    <label class="form-label">Please enter the URL of the page you want to preview</label>
                                    <input type="url" name="url" class="form-control">
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary ms-auto d-block">Preview</button>
                        </form>
                        <hr>
                        <form action="preview">
                            <div>
                                <h5 class="fs-5 mt-4 mb-3">Create my own</h5>
                                <div class="mb-3">
                                    <label class="form-label">Please enter the URL of the image you want to define</label>
                                    <input type="url" name="image" class="form-control">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Now, what title your page need to show?</label>
                                    <input type="text" name="title" class="form-control">
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">And what is the description?</label>
                                    <textarea class="form-control" name="description" rows="3"></textarea>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary ms-auto d-block">Preview</button>
                        </form>
                    </div>
                    <hr>
                </div>
            </div>
        </div>
    </main>
{% endblock %}